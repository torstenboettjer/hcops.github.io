{
    "name": "revealjs",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
            "esbenp.prettier-vscode",
            "evilz.vscode-reveal",
            "ms-azuretools.vscode-docker",
            "ritwickdey.LiveServer"
        ]
      }
    },
    "forwardPorts": [8000],
    "postCreateCommand": "npm install",
}
   